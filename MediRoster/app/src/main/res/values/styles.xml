<resources>
    <!-- Optional base theme override if needed -->
    <style name="MediRoster.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Style for EditText fields -->
    <style name="MediRosterInput">
        <item name="android:background">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Style for Buttons -->
    <style name="MediRosterButton">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:backgroundTint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>
</resources>
